// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Users {
  id         Int       @id @default(autoincrement())
  name       String
  email      String
  password   String
  avatar     String    @default("https://raw.githubusercontent.com/Gabriel-WilliamS/rocketMovies/d9ca7d0472628a44d07501b4805149ce82bc8467/src/assets/avatar_placeholder.svg")
  is_admin   Boolean   @default(false)
  created_at DateTime  @default(now())
  updated_at DateTime?
}
