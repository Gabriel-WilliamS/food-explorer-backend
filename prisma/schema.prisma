// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Users {
  id         Int       @id @default(autoincrement())
  name       String
  email      String
  password   String
  avatar     String    @default("https://raw.githubusercontent.com/Gabriel-WilliamS/rocketMovies/d9ca7d0472628a44d07501b4805149ce82bc8467/src/assets/avatar_placeholder.svg")
  is_admin   Boolean   @default(false)
  created_at DateTime  @default(now())
  updated_at DateTime?
  Foods      Foods[]

  @@map("users")
}

model Foods {
  id          Int    @id @default(autoincrement())
  name        String
  description String
  price       Float
  image       String

  user_id Int
  user    Users @relation(fields: [user_id], references: [id])

  created_at  DateTime             @default(now())
  updated_at  DateTime?
  ingredients FoodsOnIngredients[]

  @@map("foods")
}

model Ingredients {
  id    Int                  @id @default(autoincrement())
  name  String
  image String?
  foods FoodsOnIngredients[]

  @@map("ingredients")
}

model FoodsOnIngredients {
  food_id       Int
  food          Foods       @relation(fields: [food_id], references: [id])
  ingredient_id Int
  ingredient    Ingredients @relation(fields: [ingredient_id], references: [id])

  @@id([food_id, ingredient_id])
  @@map("foodsOnIngredients")
}
